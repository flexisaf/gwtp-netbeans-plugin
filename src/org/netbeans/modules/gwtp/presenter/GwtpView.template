/**
 *
 * @author ${user}
 */
public class ${targetName}View extends <#if PresenterType == "Popup">Popup</#if><#if IsAddUiHandlers >ViewWithUiHandlers<${targetName}UiHandlers><#else>ViewImpl</#if> implements ${targetName}Presenter.MyView {
    interface Binder extends UiBinder<<#if PresenterType == "Popup">PopupPanel<#else>Widget</#if>, ${targetName}View> {
    }

  <#if PresenterType == "Nested">
    @UiField
    SimplePanel main;
  <#elseif PresenterType == "PresenterWidget">
    @UiField
    HTMLPanel main;
  </#if>

    @Inject
    ${targetName}View(Binder uiBinder) {
        initWidget(uiBinder.createAndBindUi(this));
    }

    <#if PresenterType == "Nested">
    @Override
    public void setInSlot(Object slot, IsWidget content) {
        if (slot == ${targetName}Presenter.SLOT_${targetName}) {
            main.setWidget(content);
        } else {
            super.setInSlot(slot, content);
        }
    }
    </#if>
